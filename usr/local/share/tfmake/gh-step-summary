#!/usr/bin/env bash

set -u

# shellcheck source=/dev/null
{
  source "${TFMAKE_SCRIPT_DIR}/../include/tfmake/util.sh"
  source "${TFMAKE_SCRIPT_DIR}/../include/tfmake/store.sh"
}

util::context

function usage() {
  cat << EOF
Usage:
  tfmake gh-step-summary [options]

  This command append content to GitHub Step Summary.

Options:
  -h, --help, help  Show this help output.
EOF
  exit
}

case "${1-}" in
  -h|--help|help)
    usage
    ;;
  ?*)
    printf "Unknown option: %s\n\n" "${1}"
    usage
    ;;
esac

util::log_info "[tfmake:gh-step-summary] appending content to Job Step Summary from 'terraform ${TFMAKE_CONTEXT}' execution logs."

GITHUB_STEP_SUMMARY=${GITHUB_STEP_SUMMARY:-"/dev/null"}
cat "${TFMAKE_DATA_DIR}/${TFMAKE_CONTEXT}/outputs/summary.md" >> "${GITHUB_STEP_SUMMARY}"
